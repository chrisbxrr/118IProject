                            "description": notes,
                            "image_bytes": b2,
                            "image_name": img2.name,
                            "time": datetime.datetime.utcnow().isoformat(),
                            "votes":1, "status":"Reported"
                        }
                        ss.reports.append(rpt)
                        ss.alerts.insert(0,{"message":f"{pred} at {inter}","time":rpt["time"]})
                        st.success("âœ… Submitted!"); st.rerun()

    # â”€â”€ TabÂ 2: View Hazards â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    with tab2:
