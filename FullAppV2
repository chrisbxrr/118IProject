                        st.warning(f"ğŸ” classified as: {pred}")
                    with st.form("autofm"):
                        sev2  = st.select_slider("Severity", ["Low","Medium","High"])
                        notes = st.text_area("Notes (opt)")
                        sub2  = st.form_submit_button("Submit Autoâ€‘Report")
                    if sub2:
                        rpt = {
                            "id": len(ss.reports)+1,
                            "lat": lat, "lon": lon,
                            "hazard_type": pred if pred in HAZARD_TYPES else "Unknown",
