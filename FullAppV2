ss.setdefault("reports", [])
ss.setdefault("alerts", [])
ss.setdefault("filter_type", [])
ss.setdefault("filter_severity", [])

# â”€â”€â”€ Layout: main + right columns â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
