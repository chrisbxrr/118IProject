                        p = classify_image(bts)
                        ht = p if p in HAZARD_TYPES else ht
                    rpt = {
                        "id": len(ss.reports)+1,
                        "lat": lat, "lon": lon,
                        "hazard_type": ht,
                        "severity": sev,
