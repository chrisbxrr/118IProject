# â”€â”€â”€ Page config â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
st.set_page_config(page_title="ğŸš§ Road Hazard Reporter", layout="wide")

# â”€â”€â”€ YOUR API KEYS â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
API_511      = "01a34a02-8501-45e0-9007-032ff79ea071"
OPENAI_TOKEN = "OPENAI_API_KEY"

# â”€â”€â”€ 511 ENDPOINTS â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
EVENTS_URL = f"http://api.511.org/traffic/events?api_key={API_511}"
WZDX_URL   = f"http://api.511.org/traffic/wzdx?api_key={API_511}&includeAllDefinedEnums=true"

def fetch_511_events():
    r = requests.get(EVENTS_URL, timeout=5)
    r.encoding = "utf-8-sig"
    return r.json().get("events", [])

def fetch_511_closures():
    r = requests.get(WZDX_URL, timeout=5)
    r.encoding = "utf-8-sig"
    return r.json().get("events", [])

# â”€â”€â”€ time formatting helper â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
def format_time(iso_str):
    try:
        dt = parser.isoparse(iso_str)
        return dt.strftime("%-I:%M %p %A, %B %-d, %Y")
    except:
        return iso_str or "Unknown time"

# â”€â”€â”€ geocoder helper â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
geolocator = Nominatim(user_agent="hazard-reporter")
def get_intersection(lat, lon):
    q = f"""
      [out:json];
      way(around:50,{lat},{lon})["highway"]["name"];
      out tags;
    """
    try:
        resp = requests.post("http://overpass-api.de/api/interpreter", data=q, timeout=5).json()
        names = []
        for el in resp.get("elements", []):
            nm = el.get("tags", {}).get("name")
            if nm and nm not in names:
                names.append(nm)
            if len(names) == 2:
                return f"{names[0]} & {names[1]}"
        if names:
            return names[0]
    except:
        pass
    try:
        loc = geolocator.reverse((lat, lon), zoom=18, timeout=5)
        return loc.raw.get("display_name", "").split(",")[0]
    except:
        return f"{lat:.5f}, {lon:.5f}"

# â”€â”€â”€ OpenAI image classifier â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
AI = OpenAI(api_key=OPENAI_TOKEN)
HAZARD_TYPES = [
    "Pothole","Traffic Jam","Construction","Accident",
    "Flooded Road","Debris on Road","Damaged Sign","Closed Lane"
]
EMOJI_MAP = {
    "Pothole":"âš ï¸","Traffic Jam":"ğŸš—","Construction":"ğŸš§","Accident":"ğŸš¨",
    "Flooded Road":"ğŸ’§","Debris on Road":"ğŸ—‘ï¸","Damaged Sign":"ğŸš¸","Closed Lane":"ğŸš«"
}

def classify_image(img_bytes):
    b64 = base64.b64encode(img_bytes).decode()
    resp = AI.chat.completions.create(
        model="gpt-4-turbo",
        messages=[{
            "role":"user",
            "content":[
                {"type":"text","text":(
                    "Choose exactly one hazard type from: "+", ".join(HAZARD_TYPES)
                )},
                {"type":"image_url","image_url":{"url":f"data:image/jpeg;base64,{b64}"}}
            ]
        }],
        max_tokens=10
    )
    raw = resp.choices[0].message.content.strip()
    # sanitize: pick the first matching HAZARD_TYPES
    for h in HAZARD_TYPES:
        if h.lower() in raw.lower():
            return h
    return raw  # fallback if nothing matched

# â”€â”€â”€ session state init â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
